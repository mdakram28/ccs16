<!doctype html>
<html>
<head>
    <link rel='shortcut icon' href='/favicon.ico' type='image/x-icon'/ >
	<title>CCS16 - User details</title>
	<link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
	<style>
	/*body 		{ padding-top:80px; }*/
	.alert.alert-success{
		position: absolute;
		z-index: 9999;
	}
	</style>
</head>
<body>
	<div class="container-fluid">
		<% if (message.length > 0) { %>
		<div id="message" class="alert alert-success text-center" style="margin-left:50px"><%= message %></div>
		<% } %>
        <h4><a href="/profile">Profile</a></h4>
        <div class="row">
            <div class="col col-sm-4">
                <h2>Reg. No    : </h2><pre><%= u.details.regNo %></pre>
                <h2>Mobile     : </h2><pre><%= u.details.mobNo %></pre>
                <h2>Name       : </h2><pre><%= u.details.fullName %></pre>
                <h2>Experience : </h2><pre><%= u.details.experience %></pre>
                <h2>Projects   : </h2><pre><%= u.details.projects %></pre>
            </div>
            <div class="col col-sm-8">
                <table width="100%" border="2px">
                    <tr>
                        <th>Category</th>
                        <th>Ques. No.</th>
                        <th>Attempt</th>
                        <th>Time</th>
                    </tr>
                    <% categories.forEach(function(cat){ %>
                        <% quessCat[cat].forEach(function(ques){ %>
                            <tr>
                                <td><%= cat.toUpperCase() %></td>
                                <td><%= ques.qno %></td>
                                <td><%= u.attempts[ques._id.toString()].ans %></td>
                                <td><%= u.attempts[ques._id.toString()].time.getHours() + ":" + u.attempts[ques._id.toString()].time.getMinutes() + ":" + u.attempts[ques._id.toString()].time.getSeconds() %></td>
                            </tr>
                        <% }) %>
                    <% }) %>
                </table>
            </div>
        </div>

	</div>
	<script type="text/javascript">
	setTimeout(function(){
		document.getElementById("message").remove();
	},5000);
	</script>
</body>
</html>
