<!DOCTYPE html>
<html lang="en">
<head>
  <title>Riddler</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.css" type="text/css">
  <script src="bower_components/jquery/dist/jquery.js"></script>
  <script src="bower_components/bootstrap/dist/js/bootstrap.js"></script>
  <link href="Style/main.css" rel='stylesheet' type='text/css'/>
  <style>
  	#submit{
  		background:none;
  	}
  </style>
</head>
<body id="form">

<div class="container-fluid">   
<% if (message.length > 0) { %>
		<div class="alert alert-success"><center><%= message %></center></div>
	<% } %>
  <div class="row">
      
    <!--Login form-->
    <div class="col-lg-5">
        <div class="col-lg-12 col-xs-6 col-xs-offset-1">
         <h1>login</h1>
         <form role="form" action="/login" method="POST">
             <div class="form-group" id="xyz">
              <input type="email" name="email" id="email" placeholder="Enter email">
             </div>

             <div class="form-group">
              <input type="password" name="password" id="password" placeholder="Enter password">
             </div>

             <div class="form-group">
              <input type="submit">Log me in</input>
             </div>
         </form>
        </div>
    </div>
      
    <!--Sign up form-->
    <div class="col-lg-5 ">
        <div class="col-lg-12 col-xs-6 col-xs-offset-3">
     <h1>sign-up</h1>
     <form role="form" action="/signup" method="POST">
         <!--<div class="form-group">
          <input type="text" id="regNo" placeholder="Enter Regisration No.">
         </div>-->
         
         <div class="form-group" id="xyz">
          <input type="email" id="email" name="email" placeholder="Enter email">
         </div>

         <div class="form-group">
          <input type="password" id="password" name="password" placeholder="Enter password" >
         </div>
         
         <div class="form-group">
          <input type="password" id="password" name="password2" placeholder="Retype password">
         </div>
         
         <div class="form-group">
         <input type="submit" id="submit">Sign me up</input>
         </div>
     </form>
        </div>
    </div>
  </div>
</div>

</body>
</html>