</head>
<body id="form">

<div class="container-fluid">
<% if (message.length > 0) { %>
		<div class="alert alert-success"><center><%= message %></center></div>
	<% } %>
   <h1 style="display:inline">Vitians : </h1>

  <div class="row">

         <div class="col-md-12">
                <ul class="social-media" style="margin-left:-40px;">
                <li class="signup" style="padding-right:15px">Sign in using vit.ac.in account : </li>
                <li><a style="font-size:1.4em" href="/auth/google"><i  class="fa fa-google-plus"></i></a></li>
                </ul>
         </div>

  </div>
     <h1 style="display:inline">Non - Vitians</h1> <h4 style="display:inline;color:#777">Invite Needed</h4>
  <div class="row">

    <!--Login form-->
    <div class="col-lg-5">
        <div class="col-lg-12 col-xs-6 col-xs-offset-1">
         <h1>log-in</h1>
         <form role="form" action="/login" method="POST">
             <div class="form-group" id="xyz">
              <input type="email" name="email" id="email" placeholder="Enter email">
             </div>

             <div class="form-group">
              <input type="password" name="password" id="password" placeholder="ENTER PASSWORD">
             </div>

             <div class="form-group">
              <input type="submit">Log me in</input>
             </div>
         </form>


        </div>


    </div>

    <!--Sign up form-->
    <div class="col-lg-5 ">
        <div class="col-lg-12 col-xs-6 col-xs-offset-3">
     <h1>sign-up</h1>
     <form role="form" action="/signup" method="POST">
         <!--<div class="form-group">
          <input type="text" id="regNo" placeholder="Enter Regisration No.">
         </div>-->

         <div class="form-group" id="xyz">
          <input type="email" id="email" name="email" placeholder="Enter email">
         </div>

         <div class="form-group">
          <input type="password" id="password" name="password" placeholder="ENTER PASSWORD" >
         </div>

         <div class="form-group">
          <input type="password" id="password" name="password2" placeholder="RE-TYPE PASSWORD">
         </div>

         <div class="form-group">
         <input type="submit" id="submit">Sign me up</input>
         </div>
     </form>
        </div>
    </div>
  </div>
</div>

</body>
</html>
